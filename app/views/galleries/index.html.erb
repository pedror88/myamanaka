<div class="publisher">
<h3>listando galerias</h3><br />

<table>
<% @galleries.each do |gallery| %>
  <tr>
    <td><%= link_to 'exibir', gallery %>;&nbsp</td>
    <td><%= link_to 'editar', edit_gallery_path(gallery) %>;&nbsp</td>
    <td><%= link_to 'excluir', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'nova galeria', new_gallery_path %>
</div>
